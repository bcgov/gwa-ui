<?xml version="1.0" encoding="UTF-8"?>

<web-fragment
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-fragment_3_1.xsd
  "
  version="3.1"
>
  <name>gwa-admin</name>

  <ordering>
    <after>
      gwa-common
    </after>
  </ordering>

  <servlet-mapping>
    <servlet-name>AngularServlet</servlet-name>
    <url-pattern>/apis/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AngularServlet</servlet-name>
    <url-pattern>/consumers/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AngularServlet</servlet-name>
    <url-pattern>/nodes/*</url-pattern>
  </servlet-mapping>

  <filter-mapping>
    <filter-name>siteminder-auth</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-fragment>