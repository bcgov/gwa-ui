<?xml version="1.0" encoding="UTF-8" ?>
<web-app
  xmlns="http://java.sun.com/xml/ns/j2ee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://java.sun.com/xml/ns/j2ee
    http://java.sun.com/xml/ns/j2ee/web-app_3_1.xsd
  "
  version="3.1"
>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>AdminUiServlet</servlet-name>
    <jsp-file>/int/index.html</jsp-file>
  </servlet>

  <servlet>
    <servlet-name>CloseWindowServlet</servlet-name>
    <jsp-file>/WEB-INF/jsp/closeWindow.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>AdminUiServlet</servlet-name>
    <url-pattern>/int/ui</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>AdminUiServlet</servlet-name>
    <url-pattern>/int/ui/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CloseWindowServlet</servlet-name>
    <url-pattern>/int/login/window</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeveloperKeyUiServlet</servlet-name>
    <jsp-file>/index.html</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeveloperKeyUiServlet</servlet-name>
    <url-pattern>/ui</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>DeveloperKeyUiServlet</servlet-name>
    <url-pattern>/ui/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>CloseWindowServlet</servlet-name>
    <url-pattern>/login/window</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>400</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry the path you requested is not
      valid.</location>
  </error-page>

  <error-page>
    <error-code>401</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry you must be logged in to access
      this page.</location>
  </error-page>

  <error-page>
    <error-code>403</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry you do not have permission to
      access this page.</location>
  </error-page>

  <error-page>
    <exception-type>org.springframework.security.access.AccessDeniedException
    </exception-type>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry you do not have permission to
      access this page.</location>
  </error-page>

  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry the page you requested could not
      be found.</location>
  </error-page>

  <error-page>
    <error-code>405</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=The request method is not supported.
    </location>
  </error-page>

  <error-page>
    <error-code>415</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=The requested media type is not supported.
    </location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=I'm sorry there was an error generating the
      page you requested.</location>
  </error-page>

  <error-page>
    <error-code>503</error-code>
    <location>/WEB-INF/jsp/error.jsp?subTitle=We are upgrading our infrastructure and
      apologize for any inconvenience. Service will be restored shortly.</location>
  </error-page>

  <error-page>
    <location>/WEB-INF/jsp/error.jsp</location>
  </error-page>
</web-app>